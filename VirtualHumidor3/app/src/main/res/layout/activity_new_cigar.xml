<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.seanyuan.virtualhumidor3.NewCigarActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:paddingLeft="10dp"
            android:textSize="16dp"
            android:paddingBottom="2dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="0dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:id="@+id/cigarName"
            android:hint="Enter Name"
            android:focusable="true"
            android:textColorHint="#2945a3" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type:"
            android:paddingLeft="10dp"
            android:textSize="16dp"
            android:paddingBottom="2dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cigarType"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:hint="Enter Type"
            android:paddingTop="0dp"
            android:focusable="true"
            android:textColorHint="#2945a3" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:id="@+id/length"
                android:hint=" Length "
                android:focusable="true"
                android:textColorHint="#2945a3"
                android:inputType="number"
                android:background="@android:drawable/editbox_background_normal" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gauge"
                android:hint=" Gauge "
                android:focusable="true"
                android:inputType="number"
                android:textColorHint="#2945a3"
                android:background="@android:drawable/editbox_background_normal" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:id="@+id/amount"
                android:hint=" Amount "
                android:inputType="number"
                android:focusable="true"
                android:textColorHint="#2945a3"
                android:background="@android:drawable/editbox_background_normal" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price:"
            android:paddingLeft="10dp"
            android:textSize="16dp"
            android:paddingBottom="2dp" />
        <EditText
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/price"
            android:hint="$"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:inputType="numberDecimal"
            android:focusable="true"
            android:textColorHint="#2945a3" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating:"
            android:paddingLeft="10dp"
            android:textSize="16dp"
            android:paddingBottom="2dp" />
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/type"
            android:layout_toRightOf="@+id/thumbnail"
            android:id="@+id/ratingBarSetter"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="5dp"
            android:numStars="5"
            android:stepSize="1.0" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bought from:"
            android:paddingLeft="10dp"

            android:textSize="16dp"
            android:paddingBottom="2dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/location"
            android:hint=" Location"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:focusable="true"
            android:textColorHint="#2945a3" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notes:"
            android:paddingLeft="10dp"
            android:textSize="16dp"
            android:paddingBottom="2dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/notes"
            android:hint=" Great smoke. Would definitely buy again!"
            android:focusable="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:textColorHint="#2945a3"
            android:layout_marginBottom="20dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Photo"
            android:id="@+id/addPhotoButton"/>
        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"/>
    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_submit_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:src="@drawable/ic_navigation_check_24"/>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_delete_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="100dp"
            android:src="@drawable/ic_delete"/>
    </RelativeLayout>
</ScrollView>
